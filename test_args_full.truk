fn print_arg(index: i32) : void {
  var arg: []u8 = argv(index);
  var arg_len: u64 = len(arg);
  
  printf("  argv[%d]: (length %llu)\n", index, arg_len);
}

fn main() : i32 {
  var count: i32 = argc();
  printf("Program received %d arguments:\n", count);
  
  var i: i32 = 0;
  while i < count {
    print_arg(i);
    i = i + 1;
  }
  
  return 0;
}

fn test_i8() : i32 {
  var ptr: *i8 = make(@i8);
  *ptr = 42;
  delete(ptr);
  
  var arr: [5]i8;
  arr[0] = 10;
  
  var count: u64 = 10;
  var darr: []i8 = make(@i8, count);
  darr[5] = 100;
  delete(darr);
  
  return 0;
}

fn test_i16() : i32 {
  var ptr: *i16 = make(@i16);
  *ptr = 1000;
  delete(ptr);
  
  var arr: [5]i16;
  arr[0] = 100;
  
  var count: u64 = 10;
  var darr: []i16 = make(@i16, count);
  darr[5] = 5000;
  delete(darr);
  
  return 0;
}

fn test_i32() : i32 {
  var ptr: *i32 = make(@i32);
  *ptr = 100000;
  delete(ptr);
  
  var arr: [5]i32;
  arr[0] = 1000;
  
  var count: u64 = 10;
  var darr: []i32 = make(@i32, count);
  darr[5] = 50000;
  delete(darr);
  
  return 0;
}

fn main() : i32 {
  var result: i32 = 0;
  result = test_i8();
  result = test_i16();
  result = test_i32();
  return 0;
}

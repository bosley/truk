fn test_i8() : i32 {
  var ptr: *i8 = make(@i8);
  *ptr = 42;
  if *ptr != 42 {
    var msg_count: u64 = 1;
    var msg: []u8 = make(@u8, msg_count);
    panic(msg);
  }
  delete(ptr);
  
  var count: u64 = 10;
  var arr: []i8 = make(@i8, count);
  if len(arr) != 10 {
    var msg_count: u64 = 1;
    var msg: []u8 = make(@u8, msg_count);
    panic(msg);
  }
  arr[5] = 100;
  if arr[5] != 100 {
    var msg_count: u64 = 1;
    var msg: []u8 = make(@u8, msg_count);
    panic(msg);
  }
  delete(arr);
  
  var a: i8 = 5;
  var b: i8 = 3;
  if a + b != 8 {
    var msg_count: u64 = 1;
    var msg: []u8 = make(@u8, msg_count);
    panic(msg);
  }
  
  if sizeof(@i8) != 1 {
    var msg_count: u64 = 1;
    var msg: []u8 = make(@u8, msg_count);
    panic(msg);
  }
  
  return 0;
}

fn main() : i32 {
  return test_i8();
}

{
  "name": "Truk",
  "scopeName": "source.truk",
  "fileTypes": ["truk"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#storage"
    },
    {
      "include": "#types"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#characters"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#type-parameter"
    },
    {
      "include": "#generic-parameters"
    },
    {
      "include": "#function-declaration"
    },
    {
      "include": "#struct-declaration"
    },
    {
      "include": "#enum-declaration"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.truk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.truk",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.truk",
          "match": "\\b(if|else|while|for|return|break|continue|defer|match|case|import|cimport|extern|shard)\\b"
        },
        {
          "name": "keyword.operator.cast.truk",
          "match": "\\bas\\b"
        },
        {
          "name": "constant.language.truk",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.function.truk",
          "match": "\\bfn\\b"
        },
        {
          "name": "storage.type.struct.truk",
          "match": "\\bstruct\\b"
        },
        {
          "name": "storage.type.enum.truk",
          "match": "\\benum\\b"
        },
        {
          "name": "storage.type.variable.truk",
          "match": "\\b(var|const|let)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.truk",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|void|map)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.truk",
          "match": "\\b(make|delete|len|sizeof|panic|each)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.truk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.truk",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.truk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.truk",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.truk",
              "match": "\\\\([ntr0\\\\'\"x]|x[0-9a-fA-F]{2})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.truk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.truk",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.truk",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.truk",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.octal.truk",
          "match": "\\b0o[0-7]+\\b"
        },
        {
          "name": "constant.numeric.decimal.truk",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "type-parameter": {
      "patterns": [
        {
          "name": "keyword.operator.type-parameter.truk",
          "match": "@"
        }
      ]
    },
    "function-declaration": {
      "patterns": [
        {
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "storage.type.function.truk"
            },
            "2": {
              "name": "entity.name.function.truk"
            }
          }
        }
      ]
    },
    "struct-declaration": {
      "patterns": [
        {
          "begin": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*<",
          "end": "\\}",
          "beginCaptures": {
            "1": {
              "name": "storage.type.struct.truk"
            },
            "2": {
              "name": "entity.name.type.struct.truk"
            }
          },
          "patterns": [
            {
              "begin": "<",
              "end": ">",
              "patterns": [
                {
                  "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
                  "name": "entity.name.type.truk"
                },
                {
                  "match": ",",
                  "name": "punctuation.separator.truk"
                }
              ]
            },
            {
              "match": ":\\s*(\\**)\\s*\\b([A-Z][a-zA-Z0-9_]*)\\b",
              "captures": {
                "1": {
                  "name": "keyword.operator.pointer.truk"
                },
                "2": {
                  "name": "entity.name.type.truk"
                }
              }
            },
            {
              "include": "#types"
            },
            {
              "include": "#comments"
            },
            {
              "include": "#generic-parameters"
            }
          ]
        },
        {
          "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\{)",
          "captures": {
            "1": {
              "name": "storage.type.struct.truk"
            },
            "2": {
              "name": "entity.name.type.struct.truk"
            }
          }
        }
      ]
    },
    "generic-parameters": {
      "patterns": [
        {
          "begin": "<",
          "end": ">",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.typeparameters.begin.truk"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.typeparameters.end.truk"
            }
          },
          "patterns": [
            {
              "include": "#types"
            },
            {
              "include": "#generic-parameters"
            },
            {
              "match": "\\*+",
              "name": "keyword.operator.pointer.truk"
            },
            {
              "match": "\\[\\d*\\]",
              "name": "storage.modifier.array.truk"
            },
            {
              "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
              "name": "storage.type.primitive.truk"
            },
            {
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
              "name": "entity.name.type.truk"
            },
            {
              "match": ",",
              "name": "punctuation.separator.truk"
            }
          ]
        }
      ]
    },
    "enum-declaration": {
      "patterns": [
        {
          "match": "\\b(enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": {
              "name": "storage.type.enum.truk"
            },
            "2": {
              "name": "entity.name.type.enum.truk"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.truk",
          "match": "(\\+=|-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.comparison.truk",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.truk",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.truk",
          "match": "(<<|>>|&|\\||\\^|~)"
        },
        {
          "name": "keyword.operator.arithmetic.truk",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.truk",
          "match": "="
        },
        {
          "name": "punctuation.accessor.truk",
          "match": "\\."
        }
      ]
    }
  }
}
